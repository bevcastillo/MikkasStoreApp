<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_purchlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:gravity="center">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_shopping_basket"
            android:layout_marginRight="15dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/purch_emp_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mikka"
                android:textColor="@color/colorDarkText"
                android:fontFamily="sans-serif"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/purch_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/12/2019"
                android:textColor="#808080"
                android:fontFamily="sans-serif"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="right">

            <TextView
                android:id="@+id/purch_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purchased Item"
                android:textColor="@color/colorDarkText"
                android:fontFamily="sans-serif"
                android:textSize="18dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/purch_item_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.00 x 1 = "
                    android:textColor="#808080"
                    android:fontFamily="sans-serif"/>

                <TextView
                    android:id="@+id/purch_item_subtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.00"
                    android:textColor="#808080"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="5dp"
                    android:textSize="16dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        style="@style/Divider"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

</LinearLayout>