<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/payment_purchaser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bev"
                android:textColor="@color/colorDarkText"
                android:fontFamily="sans-serif"
                android:textSize="17dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/payment_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paid on: 12/12/2019"
                android:textColor="@color/colorDarkText"
                android:fontFamily="sans-serif"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/purchItemDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="3 Items, Total: "
                    android:textColor="@color/colorDarkText"
                    android:fontFamily="sans-serif"
                    android:gravity="center|right"/>


                <TextView
                    android:id="@+id/purch_item_due"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="P 99.99"
                    android:textColor="@color/colorDarkText"
                    android:fontFamily="sans-serif"
                    android:gravity="center|right"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:paddingLeft="5dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/payment_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Completed"
                android:textStyle="bold"
                android:textColor="#196F3D"
                android:fontFamily="sans-serif"
                android:textSize="16dp"
                android:gravity="right"
                android:paddingRight="5dp"/>

            <TextView
                android:id="@+id/payment_empname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Accepted by: Mikka"
                android:textColor="#808080"
                android:fontFamily="sans-serif"
                android:gravity="right"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        style="@style/Divider"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

</LinearLayout>